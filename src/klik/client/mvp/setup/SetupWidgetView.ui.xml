<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:PopupPanel>
		<g:HTMLPanel styleName="modal">
			<g:HTMLPanel styleName="modal-header">
				<b:Close ui:field="close"></b:Close>
				<b:Heading size="3">Setup</b:Heading>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="modal-body">
				<b:Form type="HORIZONTAL">
					<b:Fieldset>
						<b:ControlGroup ui:field="activeGroup" visible="false">
							<b:ControlLabel>Current COM-port</b:ControlLabel>
							<b:Controls>
								<g:InlineLabel ui:field="activePortLabel"></g:InlineLabel>
							</b:Controls>
						</b:ControlGroup>
						<b:ControlLabel>Select COM-port</b:ControlLabel>
						<b:Controls>
							<g:ListBox ui:field="comPortListBox"></g:ListBox>
						</b:Controls>
					</b:Fieldset>
				</b:Form>
			</g:HTMLPanel>
			<b:ModalFooter>
				<b:Button ui:field="shutDownBtn" icon="OFF" iconColor="WHITE" type="WARNING">Shut Down</b:Button>
				<b:Button ui:field="restartBtn" icon="REPEAT" iconColor="WHITE" type="WARNING">Restart</b:Button>
				<b:Button ui:field="save" icon="OK" iconColor="WHITE" type="PRIMARY">Save</b:Button>
			</b:ModalFooter>
		</g:HTMLPanel>
	</g:PopupPanel>
</ui:UiBinder>
